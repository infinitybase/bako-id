{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "outputLogs": "new-only"
    },
    "docs:build": {
      "dependsOn": ["^docs:build"],
      "outputs": ["dist/**"],
      "outputLogs": "new-only"
    },
    "pretest": {
      "outputLogs": "errors-only"
    },
    "test": {
      "dependsOn": ["^test", "pretest"],
      "outputLogs": "new-only"
    }
  }
}
