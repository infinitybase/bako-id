{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:sway": {
      "outputs": ["dist/**", "**/artifacts/**"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build:sway", "^codegen:sdk", "^build"],
      "outputs": ["dist/**", ".next/**"],
      "cache": true
    },
    "docs:build": {
      "dependsOn": ["^docs:build"],
      "outputs": ["dist/**"],
      "outputLogs": "new-only"
    },
    "pretest": {
      "outputLogs": "errors-only"
    },
    "test": {
      "dependsOn": ["^build", "^test", "pretest"],
      "outputLogs": "new-only",
      "cache": false
    },
    "codegen:sdk": {}
  }
}
