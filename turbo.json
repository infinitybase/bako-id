{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:sway": {
      "outputs": ["dist/**", "**/artifacts/**"],
      "cache": true
    },
    "build": {
      "dependsOn": ["codegen:sdk", "^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "API_URL",
        "VITE_API_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_APP_URL",
        "AWS_REGION",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "GRAPHQL_MARKETPLACE_API_URL"
      ],
      "cache": false
    },
    "docs:build": {
      "dependsOn": ["^docs:build"],
      "outputs": ["dist/**"],
      "outputLogs": "new-only"
    },
    "pretest": {
      "outputLogs": "errors-only"
    },
    "test": {
      "dependsOn": ["^build", "^test", "pretest"],
      "outputLogs": "new-only",
      "cache": false
    },
    "codegen:sdk": {
      "env": ["GRAPHQL_API_URL"],
      "outputs": ["src/generated/**/*.ts"],
      "cache": true
    }
  }
}
